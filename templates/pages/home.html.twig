{% extends 'base.html.twig' %}

{% block title %}{{ 'page.home.title'|trans }}{% endblock %}

{% block body %}

<!-- HERO SECTION -->
<section id="hero" class="first-section d-flex align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 d-flex flex-column justify-content-center pt-4 pt-lg-0 order-2 order-lg-1" data-aos="fade-up" data-aos-delay="200">
                <h1>{{ 'hero.title'|trans }}</h1>
                <h2>{{ 'hero.text'|trans }}</h2>
                <div class="d-flex justify-content-center justify-content-lg-start">
                    <a href="#about" class="btn-get-started scrollto">{{ 'button.getStarted'|trans }}</a>
                    <a href="#" class="btn-watch-video"><i class="fa fa-play-circle"></i><span>{{ 'button.watchVideo'|trans }}</span></a>
                </div>
            </div>
            <div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="zoom-in" data-aos-delay="200">
                <img src="assets/img/hero-img.png" class="img-fluid animated" alt="">
            </div>
        </div>   
    </div>
</section>

<!-- CONTACT FORM -->
<div id="contact" class="contact col-lg-3 position-absolute bottom-0 end-0 mb-4 me-4" data-aos="flip-right" data-aos-delay="500" data-aos-once="true">
    <div class="info">
        <div class="section-title">
            <h2>{{ 'form.contact.title'|trans }}</h2>
        </div>
        {{ form(form) }}
    </div>
</div>

<main id="main">

    <!-- CLIENT SECTION -->
    <section id="clients" class="clients section-bg">
        <div class="container">
            <div class="row" data-aos="zoom-in">
                <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
                    <img src="assets/img/clients/client-1.png" class="img-fluid" alt="">
                </div>
                <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
                    <img src="assets/img/clients/client-2.png" class="img-fluid" alt="">
                </div>
                <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
                    <img src="assets/img/clients/client-3.png" class="img-fluid" alt="">
                </div>
                <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
                    <img src="assets/img/clients/client-4.png" class="img-fluid" alt="">
                </div>
            </div>
        </div>
    </section>

</main>

{% endblock %}